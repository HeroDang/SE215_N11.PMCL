<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/row_wallet_redeem_img"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_card" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#33000000">
        <TextView
            android:id="@+id/tvNameHomestay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten homestay"
            android:textStyle="normal"
            android:textSize="28sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvNumStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textStyle="normal"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/tvNameHomestay"
            app:layout_constraintTop_toBottomOf="@id/tvNameHomestay"/>
        <RatingBar
            android:id="@+id/rbStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:progressBackgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tvNameHomestay"
            app:layout_constraintStart_toEndOf="@id/tvNumStar"/>
        <TextView
            android:id="@+id/tvComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 nhận xét"
            android:textStyle="normal"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/rbStar"
            app:layout_constraintTop_toBottomOf="@id/tvNameHomestay"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 triệu"
            android:textStyle="normal"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:background="@drawable/background_border_radius"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNumStar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>